<form novalidate autocomplete="off" class="form {{#if decorated}}form_decorated{{/if}} {{#if loading}}form_loading{{/if}} {{#if className}}{{className}}{{/if}}">
  {{#if title}}
    <h1 class="form__title">
      {{{title}}}
    </h1>
  {{/if}}

  <div class="form__fields">
    {{#each fields}}
      {{{this}}}
    {{/each}}
  </div>

  {{#if formError}}
    {{{Error value=formError ref="formErrorRef"}}}
  {{/if}}

  {{#if loading}}
    <div class="form__loader">Загрузка...</div>
  {{/if}}

  <div class="form__button">
    {{{button}}}
  </div>

  {{#if meta}}
    <div class="form__meta">
      {{{meta}}}
    </div>
  {{/if}}
</form>
