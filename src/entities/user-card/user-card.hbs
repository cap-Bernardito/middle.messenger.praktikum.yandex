<div class="user-card {{#if className}}{{className}}{{/if}}">

  <div class="user-card__avatar">
    {{{avatar}}}
  </div>

  <div class="user-card__body">
    <div class="user-card__entry">
      <div class="user-card__text user-card__text-title">{{{name}}}</div>
      <div class="user-card__meta">
        <div class="user-card__date">{{{date}}}</div>
      </div>
    </div>

    <div class="user-card__entry">
      <div class="user-card__text user-card__text-message">{{{message}}}</div>
      <div class="user-card__meta">
        {{#if counter}}
        <div class="user-card__counter">{{counter}}</div>
        {{/if}}
      </div>
    </div>
  </div>

</div>
