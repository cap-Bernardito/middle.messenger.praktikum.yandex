<div class="form-control {{#if className}}{{className}}{{/if}}">
  <textarea class="form-control__textarea  {{#if classNameTextarea}}{{classNameTextarea}}{{/if}}"
    {{#if placeholder}} placeholder={{placeholder}}  {{/if}}
    {{#if name}} name={{name}}  {{/if}}
    {{#if value}} value={{value}}  {{/if}}
    {{#if required}} required {{/if}}
    {{#if disabled}} disabled {{/if}}
    rows="1"
    cols="100"
  ></textarea>
</div>
